<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_fragment_forth_tab_basestation_database"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:background="#368797AE"
        android:text="基站小区查询"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <CheckBox
            android:id="@+id/checkbox_fragment_forth_tab_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="2dip"
            android:background="#2A8797AE"
            android:checked="false"
            android:text="4G工参"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/show_fragment_forth_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="源文件路径: "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_fragment_tab_database_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="/优易/4G工参.csv"
            android:textColor="#3F3E3E"
            android:textSize="13dp" />

    </LinearLayout>

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <CheckBox
            android:id="@+id/checkbox_fragment_forth_tab_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="2dip"
            android:background="#2A8797AE"
            android:checked="false"
            android:text="规划自定义"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/show_fragment_forth_tab_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12.5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="源文件路径: "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_fragment_tab_custom_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="/优易/规划自定义.csv"
            android:textColor="#3F3E3E"
            android:textSize="13dp" />

    </LinearLayout>

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <CheckBox
            android:id="@+id/checkbox_fragment_forth_tab_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="2dip"
            android:background="#2A8797AE"
            android:checked="false"
            android:text="LOG轨迹"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/show_fragment_forth_tab_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12.5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="源文件路径: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_fragment_basestion_track_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="/优易/测试log.csv"
            android:textColor="#3F3E3E" />

        <TextView
            android:id="@+id/text_fragment_basestion_track_choose"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:onClick="true"
            android:text="文件选择"
            android:textColor="#3F51B5"
            android:textSize="16dp"
            tools:ignore="OnClick" />
    </LinearLayout>

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <CheckBox
            android:id="@+id/checkbox_fragment_forth_tab_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="2dip"
            android:background="#2A8797AE"
            android:checked="false"
            android:text="大数据栅格"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/show_fragment_forth_tab_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12.5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="源文件路径: "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_fragment_forth_tab_grid_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="/优易/栅格数据.csv"
            android:textColor="#3F3E3E"
            android:textSize="13dp" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGround"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_fragment_forth_tab_import"
            android:layout_width="50sp"
            android:layout_height="35sp"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="25dip"
            android:background="#BBDEFB"
            android:text="导入"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_fragment_forth_tab_clear"
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dip"
            android:layout_marginRight="60dp"
            android:background="#3CF06292"
            android:text="清空"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_fragment_forth_tab_about"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100sp"
            android:background="#368797AE"
            android:text="关于"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>