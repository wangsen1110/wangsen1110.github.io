<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recangle2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:singleLine="true">

        <TextView
            android:id="@+id/textview_recyclerview_item_wireless_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="#0A0A0A"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/textview_recyclerview_item_wireless_connected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#0A0A0A"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/textview_recyclerview_item_wireless_handover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#0A0A0A"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/textview_recyclerview_item_wireless_release"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#0A0A0A"/>
        <TextView
            android:id="@+id/textview_recyclerview_item_wireless_prbuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#0A0A0A"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>